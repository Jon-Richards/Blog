<% @articles.each do |article| %>
  <p><%= article.title %></p>
  <p><%= article.text %></p>
  <%= link_to  "Show", article_path(article) %>
  <%= link_to  "Edit", edit_article_path(article) %>
  <%= link_to "Remove", article_path(article),
    method: :delete,
    data: { confirm: 'Are you sure?' }
  %>
<% end %>
<hr>
<%= link_to "New", new_article_path %>